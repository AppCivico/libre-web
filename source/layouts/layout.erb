<!doctype html>
<html>
  <head>
    <%= partial 'partial/_metatags.erb' %>
    <title>Libre <%= current_page.data.title ? "- #{current_page.data.title}" : "Save" %></title>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css' crossorigin="anonymous">
    <%= stylesheet_link_tag "application.bundle" %>
		<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  </head>

	<body class="<%= page_classes %>" <%= page_controller 'attr' %> <%= page_module 'attr' %> >

    <%= partial 'partial/_noscript.erb' %>


    <!-- navbar -->
    <nav id="navigation" class="navbar navbar-default navbar-libre navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/" data-bypass="true">
            <img src="/assets/images/logo.png" alt="" height="32px">
          </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <%= partial 'partial/_menu_links.erb' %>
        </div><!--/.nav-collapse -->
      </div>
    </nav>


		<% unless ['app', 'dash'].include? current_page.data.module %>
			<header class="header-internal">
				<div class="container">
					<div class="intro-text hide">
						<div class="intro-lead-in">Photo booth sriracha art party meggings VHS!</div>
						<div class="intro-heading">Dreamcatcher hoodie echo park shoreditch chartreuse</div>
						<a href="#services" class="page-scroll btn btn-xl">Veja mais</a>
					</div>
				</div>
			</header>
		<% end %>


    <%= yield %>



    <!-- footer section -->
    <%= partial 'partial/footer.erb' %>


		<% if ['app', 'dash'].include? current_page.data.module %>
			<!-- page loading (only for modules/webapps) -->
			<%= partial 'partial/_loading.erb' %>
		<% end %>

    <!-- the javascripts -->
    <%# javascript_include_tag "vendor.bundle", async: true %>
    <%= javascript_include_tag "application.bundle", id: 'js-app' %>

		<% if ['app', 'dash'].include? current_page.data.module %>
			<!-- code prettyprint -->
			<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js?autorun=false&skin=desert&lang=html" assync></script>
		<% end %>


    <% if build? %>
      <script src="https://cdn.ravenjs.com/3.14.2/raven.min.js" crossorigin="anonymous" assync></script>
      <script id="sentry-config" type="text/javascript">
				Raven.config('https://a02921e72dec4d0ab6069dea79ceceba@sentry.io/162166').install()
      </script>
    <% end %>

    <%= partial 'partial/_ga.erb' %>
    <%= partial 'partial/_browser-update.erb' %>

  </body>
</html>
